#RewriteEngine On
#RewriteCond  %{REMOTE_ADDR} !177.X.X.X
#RewriteCond  %{REQUEST_FILENAME} !underconstruction
#RewriteRule ^(.*)$ underconstruction.html [L,QSA]
#Страницы ошибки
ErrorDocument 401 /error/401.html
ErrorDocument 403 /error/403.html
ErrorDocument 404 /error/404.html
ErrorDocument 500 /error/500.html

#Защищаем .htaccess файл
<files .htaccess>
order allow,deny
deny from all
</files>

# Prevents directory listing зашита от просмотра папок
Options -Indexes